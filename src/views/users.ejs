        <% users.forEach(result => { %>
            
            <img src="/<%= result.profile_image %>" width="20px" heigh="20px">
            <p><%= result.username %></p>
            <a href="/user/<%= result._id %>">Ver perfil</a> <br>
            <% if(user) { %>
                <% if(user._id != result.id) { %>
